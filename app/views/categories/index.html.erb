<h1 class="text-center mt-4"> Listing all categories </h1>

<div class="apple_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
    <% @categories.each do |category| %>
      <div class="row justify-content-md-center">
        <div class="col-4 mt-3">
          <div class="card text-center shadow mb-2 bg-white rounded">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to category.name, category_path(category) %>
              </h5>
              <small><%= pluralize(category.articles.count, "articles") %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>

<div class="apple_pagination mt-3">
  <%= will_paginate @categories, :container => false %>
</div>
