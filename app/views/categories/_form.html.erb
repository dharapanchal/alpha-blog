<div class="container">
  
  <%= render 'shared/errors', obj: @category %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @category,class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :name, class: "col-2 col-form-label text-light" %> <br/>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a Category name"  %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg"%>
      </div>

      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class:"text-dark" %>
      <% end %>
    </div>
  </div>
</div>
